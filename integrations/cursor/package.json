{
  "name": "bug-fix-evaluator",
  "displayName": "Bug Fix Evaluator",
  "version": "0.1.0",
  "description": "Compare and evaluate AI-generated bug fixes against engineer-created fixes",
  "publisher": "alikaya",
  "repository": {
    "type": "git",
    "url": "https://github.com/alikayaa/bug_fix_evaluator"
  },
  "engines": {
    "cursor": "^0.20.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:bug-fix-evaluator.evaluate",
    "onCommand:bug-fix-evaluator.showReport",
    "onView:bugFixEvaluatorExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bug-fix-evaluator.evaluate",
        "title": "Evaluate Bug Fix",
        "category": "Bug Fix Evaluator"
      },
      {
        "command": "bug-fix-evaluator.showReport",
        "title": "Show Evaluation Report",
        "category": "Bug Fix Evaluator"
      },
      {
        "command": "bug-fix-evaluator.configure",
        "title": "Configure Evaluator",
        "category": "Bug Fix Evaluator"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bug-fix-evaluator-sidebar",
          "title": "Bug Fix Evaluator",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "bug-fix-evaluator-sidebar": [
        {
          "id": "bugFixEvaluatorExplorer",
          "name": "Evaluations"
        }
      ]
    },
    "configuration": {
      "title": "Bug Fix Evaluator",
      "properties": {
        "bugFixEvaluator.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Path to Python executable with bug-fix-evaluator installed"
        },
        "bugFixEvaluator.outputDirectory": {
          "type": "string",
          "default": "${workspaceFolder}/reports",
          "description": "Directory for storing evaluation reports"
        },
        "bugFixEvaluator.metrics.weights": {
          "type": "object",
          "default": {
            "correctness": 0.30,
            "completeness": 0.15,
            "patternMatch": 0.10,
            "cleanliness": 0.15,
            "efficiency": 0.15,
            "complexity": 0.15
          },
          "description": "Weights for evaluation metrics (should sum to 1.0)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
} 